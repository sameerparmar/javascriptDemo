		<script>

				//Excersice 1
				var ex1 = document.getElementById("ex1");
				var R1 = '';

				for( var a = 1; a <=5; a++){

                    // R1 = R1 + a + "<br>";
                    for(var b = 5; b >=a; b--){
                        R1 = R1 + "&nbsp;&nbsp;";
                    }
                    for(var c = 1; c <=a; c++){
                        R1 = R1 + " * ";
                    }
                    for(var d = 2; d <=a; d++){
                        R1 = R1 + " * ";
                    }
                    R1 = R1 + "<br>";
                }
				ex1.innerHTML = R1;

