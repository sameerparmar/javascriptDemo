				for( var a = 1; a <= 5; a++){
					for(var b = 5; b >= a; b-- ){
						R2 += "&nbsp;&nbsp;"
					}
					for(var c = 1; c < (a*2); c++){
						R2 = R2 + " * ";
					}
					R2 += "<br>";
				}
				ex2.innerHTML = R2 ;

