    <script>

        //Excersice 1
        var ex1 = document.getElementById("ex1");
        var R1 = '';

        for(var a = 1; a <= 5; a++){

            for(var b = 1; b < a; b++){
                R1 += "&nbsp;&nbsp;";
            }
            for(var c = 5; c > a; c--){
                R1 += " * ";
            }
            for(var d = 5; d >= a; d--){
                R1 += " * ";
            }
            R1 += "<br>";

        }
        for(var a = 2; a <= 5; a++){

            for(var b = 5; b > a; b--){
                R1 += "&nbsp;&nbsp;";
            }
            for(var c = 1; c < a; c++){
                R1 += " * ";
            }
            for(var d = 1; d <= a; d++){
                R1 += " * ";
            }
            R1 += "<br>";

        }
        ex1.innerHTML = R1;

